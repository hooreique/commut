{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "include": [
    "src/shared",
    "src/server",
  ],
  "compilerOptions": {
    "rootDir": "src",
    "noEmit": true,
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node",
    ],
    "allowImportingTsExtensions": true,
  },
}
